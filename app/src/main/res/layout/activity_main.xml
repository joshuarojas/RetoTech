<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

        <com.samuelchowi.intercorpretail.custom.IRTextView
            android:id="@+id/tvwWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_welcome"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:customFont="Helvetica_Neue_Medium"
            app:layout_constraintBottom_toTopOf="@+id/tvwName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.samuelchowi.intercorpretail.custom.IRTextView
            android:id="@+id/tvwName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_welcome"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:customFont="Omnes_Semi_Bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvwWelcome" />

        <com.samuelchowi.intercorpretail.custom.IRTextView
            android:id="@+id/tvwClose"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/register_close"
            android:textSize="18sp"
            app:customFont="Helvetica"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvwName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>